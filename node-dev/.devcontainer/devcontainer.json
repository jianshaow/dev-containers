{
	"name": "NODE-DEV",
	"image": "jianshao/node-dev:lts",
	"runArgs": [
		"--add-host=host.docker.internal:host-gateway"
	],
	"mounts": [
		{
			"source": "${localEnv:HOME}/.ssh",
			"target": "/home/node/.ssh",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/.npm",
			"target": "/home/node/.npm",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/.pnpm",
			"target": "/home/node/.pnpm",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/.local",
			"target": "/home/node/.local",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/.cache",
			"target": "/home/node/.cache",
			"type": "bind"
		},
		{
			"source": "devcontainer_node-dev_claude_data",
			"target": "/home/node/.claude",
			"type": "volume"
		},
		{
			"source": "${localEnv:HOME}/.claude.json",
			"target": "/home/node/.claude.json",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/.claude.json.backup",
			"target": "/home/node/.claude.json.backup",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/.opencode",
			"target": "/home/node/.opencode",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/.bun",
			"target": "/home/node/.bun",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/source",
			"target": "/workspaces/source",
			"type": "bind"
		}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"bradlc.vscode-tailwindcss"
			]
		}
	}
}